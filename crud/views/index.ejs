<%- include('./partials/header.ejs') %>

<div class="container">
    <div class="row">
        <!-- Add Recipe Form -->
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-center">Add Recipe</h2>

            <form action="/category" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="title" id="title" required>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label> <br>
                    <input type="file" name="image" id="image" required>
                </div>
                <div class="mb-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="number" class="form-control" name="rating" id="rating" min="1" max="5" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            
        </div>
        
        <!-- List of Category -->
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-danger text-center">List of Recipes</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Title</th>
                        <th scope="col">Image</th>
                        <th scope="col">Rating</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- read the data from the database -->
                    <% var i = 1 %>
                    <% data.forEach((item) => {  %>
                    <tr>
                        <td><%= i++ %></td>
                        <td><%= item.title %></td>
                        <td><%= item.image %></td>
                        <td><%= item.rating %></td>
                        <td>
                            <!-- Edit Form -->
                            <form action="/category/edit/<%= item._id %>" method="get" class="d-inline">
                                <button class="btn" type="submit">
                                    <i class="fa-regular fa-pen-to-square text-success"></i>
                                </button>
                            </form>
                            <!-- Delete Form -->
                            <form action="/category/delete/<%= item._id %>" method="post" class="d-inline">
                                <button class="btn" type="submit">
                                    <i class="fas fa-trash text-danger"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
